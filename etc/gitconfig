# To include this file
# [include]
#     path = ~/dotfiles/etc/gitconfig

[pull]
    rebase = interactive
[push]
    default = simple
[fetch]
    prune = true
[gui]
    fontui = -family \"Ricty Diminished\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ricty Diminished\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[core]
    excludesfile = ~/dotfiles/etc/gitignore
    pager = less -+F

[diff]
    tool = nvimdiff
    colorMoved = default
    colorMovedWS = allow-indentation-change
[difftool]
    prompt = false

[alias]
    s = status
    d = diff
    c = commit
    a = add
    aa = add -A
    sed = ! git ls-files -z | xargs -0 sed

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
[merge]
    conflictstyle = diff3
