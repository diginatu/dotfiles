# To include this file
# [include]
#     path = ~/dotfiles/etc/gitconfig

[pull]
    rebase = interactive
[push]
    default = simple
[fetch]
    prune = true
[gui]
    fontui = -family \"Ricty Diminished\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ricty Diminished\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[core]
    excludesfile = ~/dotfiles/etc/gitignore
    pager = less -+F

[diff]
    tool = nvimdiff
    colorMoved = default
    colorMovedWS = allow-indentation-change
[difftool]
    prompt = false

[alias]
    s = status
    d = diff
    c = commit
    a = add
    aa = add -A
    sed = ! git grep --cached -zl '' | xargs -0 sed

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    hyperlinks = true
    hyperlinks-file-link-prefix = "file-line://{path}:{line}"

    line-numbers-minus-style = "#692c2c"
    line-numbers-plus-style = "#2a622f"
    minus-style = syntax "#402425"
    minus-emph-style = syntax "#843333"
    minus-non-emph-style = syntax "#333333"
    plus-style = syntax "#202f21"
    plus-emph-style = syntax "#266826"
    plus-non-emph-style = syntax "#333333"
    map-styles = \
       bold purple => syntax "#331c2d", \
       bold blue => syntax "#2e1e44", \
       bold cyan => syntax "#1f3230", \
       bold yellow => syntax "#32311e"
[merge]
    conflictstyle = diff3
